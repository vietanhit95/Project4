@model DoAn4.Models.BaiViet

@{
    ViewBag.Title = "Them";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<style>
    .form-horizontal label {
        margin-bottom: 0px;
        margin-top: 26px;
    }

    #divRight {
        display: none;
    }

    #slider {
        display: none;
    }

    #divMenuLeft {
        display: none;
    }

    .mid {
        display: none;
    }

    .form-horizontal label {
        width: 200px;
    }

    .col-md-10 {
        margin-top: -30px;
        
    }
    .Edt{
        border-radius:5px;
    }
    
