@model DoAn4.Models.VungMien

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Mới</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.TenVungMien, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenVungMien)
                @Html.ValidationMessageFor(model => model.TenVungMien)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-outline btn-info" type="button" style="text-decoration:none;"><i class="fa fa-arrow-left" aria-hidden="true"></i> @Html.ActionLink("Quay Lại", "Index")</button>
</div>
