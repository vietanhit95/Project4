                @*@Html.EditorFor(model => model.TrangThai)*@
                @Html.ValidationMessageFor(model => model.TrangThai)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <button class="btn btn-outline btn-info" type="button" style="text-decoration:none;">
        <i class="fa fa-arrow-left"></i> @Html.ActionLink("Quay Lại", "Index")
    </button>
</div>
